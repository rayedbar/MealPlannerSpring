<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!--Begin database connection settings-->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mealplanner2</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!--JDBC connection pool-->
        <property name="connection.pool_size">1</property>

        <!--SQL dialect-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- List of XML mapping files -->
        <mapping class="net.therap.mealplannerhibernate.entity.Dish"/>
        <mapping class="net.therap.mealplannerhibernate.entity.Meal"/>
        <mapping class="net.therap.mealplannerhibernate.entity.User"/>
    </session-factory>
</hibernate-configuration>